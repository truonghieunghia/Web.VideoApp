<?xml version="1.0" encoding="utf-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
 <filter>
  <filter-name>LoginFilter</filter-name>
  <filter-class>groupbase.thn.web.videoapp.filter.LoginFilter</filter-class>
 </filter>
 <filter-mapping>
  <filter-name>LoginFilter</filter-name>
  <url-pattern>/admin/*</url-pattern>
  <dispatcher>FORWARD</dispatcher>
  <dispatcher>REQUEST</dispatcher>
 </filter-mapping>
 <servlet>
  <servlet-name>HomeController</servlet-name>
  <servlet-class>groupbase.thn.web.videoapp.controller.HomeController</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>AdminContronller</servlet-name>
  <servlet-class>groupbase.thn.web.videoapp.controller.AdminContronller</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>LogInController</servlet-name>
  <servlet-class>groupbase.thn.web.videoapp.controller.LogInController</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>ApiController</servlet-name>
  <servlet-class>groupbase.thn.web.videoapp.api.ApiController</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>ApiYoutubeController</servlet-name>
  <servlet-class>groupbase.thn.web.videoapp.api.ApiYoutubeController</servlet-class>
 </servlet>
 <servlet>
  <display-name>IndexController</display-name>
  <servlet-name>IndexController</servlet-name>
  <servlet-class>groupbase.thn.web.videoapp.controller.IndexController</servlet-class>
 </servlet>
 <servlet>
  <display-name>PlayController</display-name>
  <servlet-name>PlayController</servlet-name>
  <servlet-class>groupbase.thn.web.videoapp.controller.PlayController</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>IndexController</servlet-name>
  <url-pattern>/index.html</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>AdminContronller</servlet-name>
  <url-pattern>/admin</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>LogInController</servlet-name>
  <url-pattern>/login</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>ApiController</servlet-name>
  <url-pattern>/api</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>ApiYoutubeController</servlet-name>
  <url-pattern>/api/youtube</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>PlayController</servlet-name>
  <url-pattern>/view</url-pattern>
 </servlet-mapping>
 <welcome-file-list>
  <welcome-file>index.html</welcome-file>
 </welcome-file-list>
</web-app>
